<div id="signup-container" class="container">
    <div id="signup-form-header">
        <h2>Sign Up</h2>
    </div>
    <div id="signup-form">
        <form method="post" action="/signup">
            <input type="text" placeholder="First Name" name="firstName" >
            <input type="text" placeholder="Last Name" name="lastName" >
            <input type="text" placeholder="Address" name="address" >
            <input type="text" placeholder="Email" name="email" >
            <input type="text" placeholder="Contact Number" name="contactNumber" >
            <input type="password" placeholder="Password" name="account_key" >
            <a href="/login" class="waves-effect waves-light btn-small save-btn confirm-btn">login</a>
            <button type="submit" class="waves-effect waves-light btn-small cancel-btn">sign up</button>
        </form>    
    </div>
</div>    