<div id="login-container" class="container">
    <div id="login-form-header">
        <h2>login</h2>
    </div>
    <div id="login-form">
        <form method="post" action="/login">
            <input type="text" placeholder="Email" name="email">
            <input type="password" placeholder="Password" name="account_key">
            <button type = "submit" class="waves-effect waves-light btn-small save-btn confirm-btn">login</button>
            <a href = "/signup" class="waves-effect waves-light btn-small cancel-btn">sign up</a>
        </form>    
    </div>
</div>