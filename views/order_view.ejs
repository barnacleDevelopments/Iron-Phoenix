  <div class="orders-container">
    <div class="carousel carousel-slider center orders-carousel">
      <div class="carousel-item white-text" href="#one!">
        <div class="orders">
          <ul class="collapsible">
        <% orders.currentOrders.forEach(order => { %>
              <li>
                <div class="collapsible-header order-info-header"><i class="material-icons">arrow_drop_down</i><%- order.date %></div>
                <div class="collapsible-body order-info-content">
          <div class="order-details">
          <div>
              <h2>Order Placed</h2>
              <h3><%- order.date %></h3>
          </div>
          <div>
              <h2>Total</h2>
              <h3><%- order.total %></h3>
          </div>
          <div>
            <h2>Delivery Location</h2>
              <h3><%- order.location %></h3>
          </div>
      </div>
            <div class="order-table">
              <table>
                  <thead>
                    <tr>
                        <th>Item Name</th>
                        <th>Item Price</th>
                    </tr>
                  </thead>
          
                  <tbody>
                  <%  order.products.forEach(p => { %>
                    <tr>
                      <td><%- p.name %></td>
                      <td>$<%- p.price %></td>
                    </tr>
                 <% }) %>
                  </tbody>
                </table>
              </div>
          </div>
        </li>
