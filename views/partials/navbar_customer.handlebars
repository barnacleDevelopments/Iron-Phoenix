<div id="navbar">
  <nav id="nav">
    {{#if pageType }}
    <div id="logo">
      <img src="/ip7.png">
    </div>
    {{else}}
    <div id="nav-header">
      <a href="/category"><i class="material-icons">arrow_back</i></a>
      <div>
        {{#biggerThen header header.length 8}}
        {{value}}
        {{/biggerThen}}
      </div>
    </div>
    {{/if}}
  </nav>

  <div id="user-interface">
    {{#if isCart}}
    <div id="cart-icon">
      <a href="/user/cart/id">
        <img src="/shopping-cart.png">
      </a>
      <div id="cart-count"><span></span></div>
    </div>
    {{/if}}
    <div id="user-icon">
      <a class='dropdown-trigger' href='#' data-target='dropdown1'><i class="material-icons">account_circle</i></a>
      <ul id='dropdown1' class='dropdown-content'>
        <li><a href="/user/info">User Info</a></li>
        <li><a href="/about">About</a></li>
        <li><a href="/user/order">Order</a> </li>
        <li><a href="/terms">Terms & Conditions</a></li>
        <li class="divider" tabindex="-1"></li>
        {{!-- <li><a href="">Sign In</a></li> --}}
        <li> <a href="/logout">Sign Out</a></li>
      </ul>
    </div>
  </div>
</div>
<div class="option-menu-shadow"></div>
</div>

